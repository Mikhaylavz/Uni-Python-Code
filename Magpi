num = int(input("Please input a number between 1 and 7 "))

if num == 1:
    print("One for sorrow")
elif num == 2:
    print("Two for joy")
elif num == 3:
    print("Three for a girl")
elif num == 4:
    print("Four for a boy")
elif num == 5:
    print("Five for silver")
elif num == 6:
    print("Six for gold")
elif num == 7:
    print("Seven for a secret never to e told")
else:
    print("Not a permitted number!")
